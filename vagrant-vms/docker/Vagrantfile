# Vagrantfile
Vagrant.configure("2") do |config|
  # Specify the Ubuntu image to use
  config.vm.box = "ubuntu/focal64" # Ubuntu 20.04 (Focal Fossa)

  # Set up a private network with port forwarding
  config.vm.network "private_network", ip: "192.168.56.10"

  # Forward a private port (e.g., Docker listens on port 2375 for API access)
  config.vm.network "forwarded_port", guest: 2375, host: 2375

  # Provision the VM
  config.vm.provision "shell", inline: <<-SHELL
    # Update and install prerequisites for Docker
    sudo apt-get update -y
    sudo apt-get install -y \ 
        apt-transport-https \ 
        ca-certificates \ 
        curl \ 
        software-properties-common

    # Add Docker's official GPG key
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

    # Set up the stable Docker repository
    echo \"deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu focal stable\" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

    # Update package list again and install Docker
    sudo apt-get update -y
    sudo apt-get install -y docker-ce docker-ce-cli containerd.io

    # Ensure Docker starts automatically
    sudo systemctl enable docker
    sudo systemctl start docker

    # Add the default vagrant user to the Docker group (to run Docker without sudo)
    sudo usermod -aG docker vagrant
  SHELL

  # Customize VM resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 2
  end
end
